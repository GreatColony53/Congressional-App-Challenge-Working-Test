{
  "manifest_version": 3,
  "name": "Flashcard Quizard",
  "version": "1.0",
  "description": "An extension to assist with focus.",
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "activeTab", "scripting", "sidePanel", "tabs"],

  "icons": {
      "16": "assets/Icon.png",
      "48": "assets/Icon.png",
      "128": "assets/Icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/Icon.png",
      "48": "assets/Icon.png",
      "128": "assets/Icon.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "background": {
    "service_worker": "serviceworker.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/Icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}